<h2>Show Post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @post.description %>
  </li>

  <li>
    <strong>Author:</strong>
    <%= @post.user.name %>
  </li>


  <li>
    <strong>Comments:</strong>
    <div class="row">
      <%= render_many @post.comments,  TestAppWeb.CommentView, "comment.html" %>
    </div>
  </li>
  <li>
    <strong>New Comment</strong>
    <div class="row">
      <%= render TestAppWeb.CommentView, "form.html", Map.put(assigns, :action, post_comment_path(@conn, :create, @post)) %>
    </div>
  </li>
</ul>

<span><%= link "Edit", to: post_path(@conn, :edit, @post) %></span>
<span><%= link "Back", to: post_path(@conn, :index) %></span>
